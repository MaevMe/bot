{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "ES2021.String"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  }
}
